{
  "name": "@hl8/domain-base",
  "version": "0.1.0",
  "description": "HL8 平台专用的领域核心库，提供聚合、实体、值对象与事件等纯领域能力。",
  "keywords": [
    "nestjs",
    "domain-base"
  ],
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/hl8/hl8-aisaas-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/hl8/hl8-aisaas-platform"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./index.js": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/testing": "11.1.9",
    "@types/jest": "^30.0.0",
    "@types/node": "24.10.0",
    "@types/supertest": "^6.0.3",
    "eslint": "9.39.1",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.11.0"
}
