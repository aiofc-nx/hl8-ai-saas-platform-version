{
  "name": "@hl8/mikro-orm-nestjs",
  "version": "0.1.0",
  "description": "HL8 平台专用的数据库集成库，支持 PostgreSQL 与 MongoDB 驱动，遵循平台配置、日志、异常规范。",
  "keywords": [
    "nestjs",
    "mikro-orm",
    "postgresql",
    "mongodb",
    "orm"
  ],
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/hl8/hl8-aisaas-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/hl8/hl8-aisaas-platform"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./index.js": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && echo '{\"type\":\"module\"}' > dist/package.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hl8/config": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/knex": "^6.2.7",
    "@mikro-orm/mongodb": "^6.2.7",
    "@mikro-orm/postgresql": "^6.2.7",
    "@nestjs/common": "11.1.8",
    "@nestjs/core": "11.1.8",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/testing": "11.1.8",
    "@types/jest": "^30.0.0",
    "@types/node": "24.10.0",
    "@types/supertest": "^6.0.2",
    "eslint": "9.39.1",
    "jest": "^30.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist"
  ]
}
