{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Root",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@hl8/domain-base": ["libs/core/domain-base/src/index.ts"],
      "@hl8/application": ["libs/core/application-base/src/index.ts"],
      "@hl8/infrastructure-base": ["libs/core/infrastructure-base/src/index.ts"],
      "@hl8/multi-tenancy": ["libs/multi-tenancy/src/index.ts"],
      "@hl8/logger": ["libs/common/logger/src/index.ts"],
      "@hl8/exceptions": ["libs/common/exceptions/src/index.ts"],
      "@hl8/config": ["libs/common/config/src/index.ts"],
      "@hl8/cache": ["libs/cache/src/index.ts"],
      "@hl8/bootstrap": ["libs/bootstrap/src/index.ts"],
      "@hl8/mikro-orm-nestjs": ["libs/mikro-orm-nestjs/src/index.ts"],
      "@hl8/async-storage": ["libs/async-storage/src/index.ts"],
      "@hl8/swagger": ["libs/common/swagger/src/index.ts"],
      "@hl8/tenant":["libs/modules/tenant/src/index.ts"]
    }
  }
}
