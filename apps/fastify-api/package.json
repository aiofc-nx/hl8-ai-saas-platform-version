{
  "name": "fastify-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:schema:create": "pnpm run build && mikro-orm schema:create --config ./mikro-orm.config.js",
    "db:schema:create:run": "pnpm run build && mikro-orm schema:create --run --config ./mikro-orm.config.js",
    "db:schema:drop": "pnpm run build && mikro-orm schema:drop --config ./mikro-orm.config.js",
    "db:migration:create": "pnpm run build && mikro-orm migration:create --config ./mikro-orm.config.js",
    "db:migration:up": "pnpm run build && mikro-orm migration:up --config ./mikro-orm.config.js",
    "db:migration:down": "pnpm run build && mikro-orm migration:down --config ./mikro-orm.config.js",
    "db:migration:list": "pnpm run build && mikro-orm migration:list --config ./mikro-orm.config.js"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@hl8/async-storage": "workspace:*",
    "@hl8/bootstrap": "workspace:*",
    "@hl8/config": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@hl8/mikro-orm-nestjs": "workspace:*",
    "@hl8/multi-tenancy": "workspace:*",
    "@hl8/swagger": "workspace:*",
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/knex": "^6.5.9",
    "@mikro-orm/migrations": "^6.5.9",
    "@mikro-orm/mongodb": "^6.5.9",
    "@mikro-orm/postgresql": "^6.5.9",
    "@mikro-orm/reflection": "^6.5.9",
    "@mikro-orm/seeder": "^6.5.9",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.1",
    "@nestjs/platform-fastify": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "ioredis": "^5.4.1",
    "luxon": "^3.5.0",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.9",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}